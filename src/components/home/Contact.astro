---
// No necesitas importar React, solo usa HTML y Tailwind
---

<section id="contacto" class="py-24">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">¿Listo para empezar?</h2>
          <p class="text-gray-500 mb-8">
            Cuéntanos sobre tu proyecto y te ayudaremos a hacerlo realidad.
          </p>
          <div class="space-y-4">
            {[
              "Consulta gratuita inicial",
              "Presupuesto detallado",
              "Soporte continuo",
              "Garantía de satisfacción",
            ].map((feature) => (
              <div class="flex items-center space-x-3">
                <span class="h-5 w-5 text-primary">✔️</span>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <form class="space-y-4">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="space-y-2">
                <label for="nombre" class="text-sm font-medium">Nombre</label>
                <input
                  id="nombre"
                  type="text"
                  placeholder="Tu nombre"
                  class="w-full p-2 border rounded"
                />
              </div>
              <div class="space-y-2">
                <label for="email" class="text-sm font-medium">Email</label>
                <input
                  id="email"
                  type="email"
                  placeholder="tu@email.com"
                  class="w-full p-2 border rounded"
                />
              </div>
            </div>
            <div class="space-y-2">
              <label for="mensaje" class="text-sm font-medium">Mensaje</label>
              <textarea
                id="mensaje"
                placeholder="Cuéntanos sobre tu proyecto"
                rows="4"
                class="w-full p-2 border rounded"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>