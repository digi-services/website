---
import {
  Container,
  PhoneIcon,
  MailIcon,
  LocationIcon,
  ClockIcon,
  IconContainer,
} from "@/components";
---

<div class="bg-base-200 py-6 text-neutral-800">
  <Container>
    <div
      class="flex flex-wrap justify-between items-center space-y-2 md:space-y-0"
    >
      <!-- Información de contacto -->
      <div class="flex flex-wrap items-center space-x-4 text-xs font-medium">
        <!-- Dirección -->
        <div class="flex items-center space-x-2">
          <IconContainer>
            <LocationIcon width="18" height="18" />
          </IconContainer>
          <span>Av.Holanda 099 / Providencia - Santiago</span>
        </div>

        <div class="hidden md:flex items-center justify-center my-auto">|</div>

        <!-- Teléfono -->
        <div class="flex items-center space-x-2">
          <IconContainer>
            <PhoneIcon width="18" height="18" />
          </IconContainer>
          <span>+56 2 6469 3359</span>
        </div>

        <div class="hidden md:block">|</div>

        <!-- Email -->
        <div class="flex items-center space-x-2">
          <IconContainer>
            <MailIcon width="18" height="18" />
          </IconContainer>
          <span>ventas@webemprendedores.cl</span>
        </div>

        <div class="hidden md:block">|</div>

        <!-- Horario -->
        <div class="flex items-center space-x-2">
          <IconContainer>
            <ClockIcon width="18" height="18" />
          </IconContainer>
          <span>Lunes a Viernes: 9:00 - 17:00</span>
        </div>
      </div>

      <!-- Íconos de redes sociales -->
      <div class="flex space-x-1">
        <!-- Facebook -->
        <a
          href="https://facebook.com"
          target="_blank"
          class="hover:text-gray-300 transition-colors text-facebook-blue"
          aria-label="Facebook"
        >
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-brand-facebook"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 2a1 1 0 0 1 .993 .883l.007 .117v4a1 1 0 0 1 -.883 .993l-.117 .007h-3v1h3a1 1 0 0 1 .991 1.131l-.02 .112l-1 4a1 1 0 0 1 -.858 .75l-.113 .007h-2v6a1 1 0 0 1 -.883 .993l-.117 .007h-4a1 1 0 0 1 -.993 -.883l-.007 -.117v-6h-2a1 1 0 0 1 -.993 -.883l-.007 -.117v-4a1 1 0 0 1 .883 -.993l.117 -.007h2v-1a6 6 0 0 1 5.775 -5.996l.225 -.004h3z" /></svg>
        </a>

        <!-- Twitter -->
        <a
          href="https://twitter.com"
          target="_blank"
          class="hover:text-gray-300 transition-colors text-x-black"
          aria-label="Twitter"
        >
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-brand-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8.267 3a1 1 0 0 1 .73 .317l.076 .092l4.274 5.828l5.946 -5.944a1 1 0 0 1 1.497 1.32l-.083 .094l-6.163 6.162l6.262 8.54a1 1 0 0 1 -.697 1.585l-.109 .006h-4.267a1 1 0 0 1 -.73 -.317l-.076 -.092l-4.276 -5.829l-5.944 5.945a1 1 0 0 1 -1.497 -1.32l.083 -.094l6.161 -6.163l-6.26 -8.539a1 1 0 0 1 .697 -1.585l.109 -.006h4.267z" /></svg>
        </a>

        <!-- LinkedIn -->
        <a
          href="https://linkedin.com"
          target="_blank"
          class="hover:text-gray-300 transition-colors text-linkedin-blue"
          aria-label="LinkedIn"
        >
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-brand-linkedin"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 2a5 5 0 0 1 5 5v10a5 5 0 0 1 -5 5h-10a5 5 0 0 1 -5 -5v-10a5 5 0 0 1 5 -5zm-9 8a1 1 0 0 0 -1 1v5a1 1 0 0 0 2 0v-5a1 1 0 0 0 -1 -1m6 0a3 3 0 0 0 -1.168 .236l-.125 .057a1 1 0 0 0 -1.707 .707v5a1 1 0 0 0 2 0v-3a1 1 0 0 1 2 0v3a1 1 0 0 0 2 0v-3a3 3 0 0 0 -3 -3m-6 -3a1 1 0 0 0 -.993 .883l-.007 .127a1 1 0 0 0 1.993 .117l.007 -.127a1 1 0 0 0 -1 -1" /></svg>
        </a>
      </div>
    </div>
  </Container>
</div>
